/* pages/index/Sj_revenue/Sj_revenue.wxss */
@import "../../../colorui/main.wxss";
@import "../../../colorui/icon.wxss";
.reve{
  width: 100%;
  height: 91%;
  background: #F9F9F9;
  padding: 30rpx;
}
.reve-top{
  width: 100%;
  padding: 40rpx 30rpx 64rpx;
  background: #fff;
  margin-bottom: 44rpx;
}
.top-1{
  width: 100%;
font-size: 20rpx;
font-family: Microsoft YaHei;
font-weight: 400;
color: #999999;
}
.top-2{
  width: 100%;
  margin: 100rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #188BFF;
}
.top-2 text:first-child{
  margin-top: 10rpx;
font-size: 30rpx;
font-family: Microsoft YaHei;
font-weight: 400;
}
.top-2 text:last-child{
  
font-size: 60rpx;
font-family: SimHei;
font-weight: bold;
}
.top-btn{
  width: 140rpx;
height: 50rpx;
background: linear-gradient(60deg, #66B7F9, #3A91F7);
border-radius: 25px;

font-size: 24rpx;
font-family: Microsoft YaHei;
font-weight: 400;
color: #FFFFFF;
margin: 0 auto;
display: flex;
align-items: center;
justify-content: center;
}
.reve-bot{
  width: 100%;
  padding: 0 30rpx;
  background: #fff;
}
.bot-1{
  width: 100%;
  padding:32rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.bot-1 text:first-child{
  
font-size: 24rpx;
font-family: Microsoft YaHei;
font-weight: 400;
color: #333333;
}
.bot-1 text:last-child{
  font-size: 20rpx;
}
.bot-border{
  border-bottom: 2rpx solid #F9F9F9;
}