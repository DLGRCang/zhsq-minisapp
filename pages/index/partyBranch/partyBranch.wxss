/* pages/index/partyBranch/partyBranch.wxss */
@import "../../../wxParse/wxParse.wxss";
.partyBranch{
  width: 100%;
  height: 100%;
}
.box{
  width: 100%;
  height: 30%;
  position: relative;
  overflow-x: hidden;
  
box-shadow: 0px 3px 10px 0px rgba(239, 240, 243, 0.99);
padding: 56rpx 30rpx 0;
box-sizing: border-box;
}
.back-box1{
  width: 200%;
height: 488rpx;
background: #FA7D7B;
opacity: 0.3;
border-radius: 50%;
  position: absolute;
  top: -62%;
  left: -50%;
  z-index: -3;
}
.back-box2{
  position: absolute;
  top: -66%;
  left: -55%;
  z-index: -2;
  width: 200%;
height: 479rpx;
background: #FF7B79;
border-radius: 50%;
}
.back-box3{
  position: absolute;
  top: -70%;
  left: -50%;
  z-index: -1;
  width: 200%;
height: 479rpx;
  background: #F35854;
  border-radius: 50%;
}
.top-text{
  width: 100%;
  height: 70%;
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-sizing: border-box;
}
.top-text view:first-child{
  text-align: center;
  width: 100%;
font-size: 28rpx;
font-family: Microsoft YaHei;
font-weight: bold;
color: #CD2424;
margin-bottom: 30rpx;
}
.top-text view:last-child{
  width: 100%;
font-size: 24rpx;
font-family: Microsoft YaHei;
font-weight: 400;
color: #333333;
}
.top-tab{
  width: 100%;
}
.bot-box{
  width: 100%;
  height: 61%;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
.dang{
  width: 100%;
  height: 100%;
  overflow-y: auto;
}
.neirong{
  width: 100%;
  background: #fff;
  padding: 25rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}
.nrimg{
  width: 80rpx;
height: 80rpx;
background: #F55E5A;
border-radius: 50%;
margin-right: 20rpx;
}
.nrText{
  width: 70%;
  height: 80rpx;
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
}
.nrText view:first-child{
  width: 100%;
  
font-size: 26rpx;
font-family: Microsoft YaHei;
font-weight: 400;
color: #333333;
}
.nrText view:last-child{
  width: 100%;
  
font-size: 20rpx;
font-family: Microsoft YaHei;
font-weight: 400;
color: #999999;
}
.xinwen{
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}