/* pages/index/partyBranch/partyBranch.wxss */
@import "../../../wxParse/wxParse.wxss";
.partyBranch{
  width: 100%;
  height: 100%;
}
.box{
  width: 100%;

  position: relative;
  overflow-x: hidden;
box-shadow: 0px 3px 10px 0px rgba(239, 240, 243, 0.99);
padding: 56rpx 30rpx 0;
box-sizing: border-box;
}
.pos-top{
  width: 100%;
  position: fixed;
  background: #f9f9f9;
  left: 0;
  z-index: 10;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.beijing{
  width: 100%;
  height: 206rpx;
  left: 0;
  top: 0;
  position: absolute;
  z-index: -2;
}
.top-text{
  width: 100%;
  height: 251rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-sizing: border-box;
}
.top-text view:first-child{
  text-align: center;
  width: 100%;
font-size: 28rpx;
font-family: Microsoft YaHei;
font-weight: bold;
color: #CD2424;
margin-bottom: 30rpx;
}
.top-text view:last-child{
  width: 100%;
font-size: 24rpx;
font-family: Microsoft YaHei;
font-weight: 400;
color: #333333;
}
.top-tab{
  width: 100%;
}
.bot-box{
  width: 100%;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
.dang{
  width: 100%;

}
.neirong{
  width: 100%;
  background: #fff;
  padding: 25rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}
.nrimg{
  width: 80rpx;
height: 80rpx;
background: #F55E5A;
border-radius: 50%;
margin-right: 20rpx;
}
.nrText{
  width: 70%;
  height: 80rpx;
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
}
.nrText view:first-child{
  width: 100%;
  
font-size: 26rpx;
font-family: Microsoft YaHei;
font-weight: 400;
color: #333333;
}
.nrText view:last-child{
  width: 100%;
  
font-size: 20rpx;
font-family: Microsoft YaHei;
font-weight: 400;
color: #999999;
}
.xinwen{
  width: 100%;

}
.seven_box{
  width: 100%;
  padding:25rpx;background: #fff;border-radius: 25rpx;
  position: relative;overflow: hidden;clear:both;
  margin-bottom: 20rpx;
}
.seven_left{
  color: #999999;width: 75%;float:left;}
  .seven_left>text{display: block;line-height:1.3;}
  .seven_right{
    width:25%;height:130rpx;float:right;}
    .seven_right>image{width:100%;
      height:100%;}