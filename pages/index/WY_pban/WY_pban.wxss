.fl{float: left;}
.fr{float: right;}
/* 頭部背景樣式 */
.box-body{ width: 100%;height: 100%;position: relative;overflow-x: hidden;
  /* padding: 0 30rpx; */color:#000;padding-bottom: 30%;

}
.beijing{
  width: 100%;
  height: 412rpx;
  left: 0;
  top: 0;
  position: absolute;
  z-index: -1;
}
/* 内容样式 */
.pban_box{margin:0 auto;padding:35rpx;}
.pban_box>picker{font-weight: bold;color: #fff;}
.pban_box>.box{border-radius: 15rpx;background: #fff;padding:35rpx;clear: both;overflow: hidden;
  font-size: 26rpx;margin-top:35rpx;}
.pban_box>.box>.box_top>.bor_fl{float: left;width: 60%;display: block;} 
.pban_box>.box>.box_top{height:45rpx;line-height: 45rpx;}
.pban_box>.box>.box_top>.bor_fl>image{width:45rpx;height: 45rpx;border-radius: 50%;margin-right: 15rpx;} 
/* 大头像样式 */

.dbox_top>.bor_fl{float: left;    display: inline-flex;} 
.dbox_top{height:85rpx;line-height: 85rpx;    margin-bottom: 35rpx;color: #fff;font-size: 32rpx;font-weight: bold;}
.dbox_top>.bor_fl>image{width:85rpx;height: 85rpx;border-radius: 50%;margin-right: 15rpx;} 



.pban_box>.box>.bor_fr{float: right;width: 40%;color: #999;} 
.pban_box>.box>.box_title{display: inline-block;margin-left:55rpx;line-height:2;padding-top: 15rpx;}
.pban_box>.box>.box_title>view{color: #999;padding-right: 35rpx;}
.pban_box>.box>.box_title>view>text{padding-left: 35rpx;color: #000;}

.zwsj{text-align: center;font-size: 32rpx;line-height: 2;margin-top:65%;color: #999;}
.zwsj>image{width:60%;height:300rpx;}