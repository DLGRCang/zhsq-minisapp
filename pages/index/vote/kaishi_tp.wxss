/* pages/tp/tp.wxss */
.details{width: 100%;height: 100%; overflow: hidden;}
.title{padding: 10rpx 0 30rpx;text-align: center;font-size: 26rpx;
font-family: Microsoft YaHei;font-weight: bold;color: #333333;}
.title-name{text-align: center;font-size: 20rpx;font-family: Microsoft YaHei;
font-weight: 400;color: #999999;margin-bottom: 15rpx;}
.top-navigation{width: 100%;height: 10.5%;background: #1082FF;
  box-sizing: border-box;display: flex;align-items: center;
  justify-content: space-between;box-sizing: border-box;padding: 0 30rpx;
  font-size: 30rpx;font-family: Microsoft YaHei;font-weight: 400;color: #fff;
}
.box-body{
  width: 100%;height: 100%;position: relative;overflow-x: hidden;padding: 0 30rpx 200rpx;
}
.back-box1{width: 200%;height: 488rpx;background: #0688F8;opacity: 0.3;
border-radius: 50%;position: absolute;top: -7%;left: -50%;z-index: -3;
}
.back-box2{position: absolute;top: -9%;left: -55%;z-index: -2;width: 200%;
height: 479rpx;background: #1BB1FD;border-radius: 50%;
}
.back-box3{position: absolute;top: -12%;left: -50%;z-index: -1;
  width: 200%;height: 479rpx;background: #1082FF;border-radius: 50%;
}

/*内容样式 */
.tp_box{width:100%;margin:0 auto;border-radius: 15rpx;background-color: #fff;padding:0 35rpx 35rpx 35rpx;
            margin-top: 35rpx;padding-bottom: 45rpx;}
.tp_xx{margin-top: 25rpx;}
.cu-form-group {
              background-color: var(--white);
              padding: 1rpx 30rpx;
              display: inline-flex;
              align-items: center;
              min-height: 0rpx;
              justify-content: space-between;
          }
.tp_box>button{
  width: 590rpx;
height: 87rpx;line-height: 87rpx;
