/* 内容样式 */
.ditails_box{width:100%;margin:0 auto;padding:35rpx;}
.box_one{width: 100%;padding:15rpx 35rpx 35rpx 35rpx;background: #fff;overflow: hidden;clear: both;
             border-radius: 15rpx;}
.box_one>.fl{width: 75%;float: left;}
.box_one>.fr{width: 25%;float: right;}
