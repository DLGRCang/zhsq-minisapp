.box_one>.fl>.one_img>image{width:30rpx;height: 28rpx;padding-right: 5rpx;}
.box_one>.fl>.one_tabimg{float: left;padding-right: 35rpx;padding-top: 15rpx;}
.box_one>.fr>image{width: 100%;height:120rpx;}
