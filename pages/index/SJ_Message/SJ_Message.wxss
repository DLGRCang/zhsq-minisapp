/* 頭部背景樣式 */
.box_content{    margin-bottom: 35%;}
.box-body{ width: 100%;height: 100%;position: relative;overflow-x: hidden;
  /* padding: 0 30rpx; */color:#333;
}
.back-box1{width: 200%;height: 360rpx;background: #0688F8;opacity: 0.3;
border-radius: 50%;position: absolute;top: -7%;left: -50%;z-index: -3;}
.back-box2{position: absolute;top: -9%;left: -55%;z-index: -2;width: 200%;
height: 350rpx;background: #1BB1FD;border-radius: 50%;}
.back-box3{position: absolute;top: -12%;left: -50%;z-index: -1;
  width: 200%;height: 340rpx; background: #1082FF; border-radius: 50%;
}
/* 内容样式 */

.view_tab{border-radius: 0;}
.view_tab>.tab_bar{color: #A9B3BD;    height:100rpx;width: 100%;
  padding-left:40rpx;padding-top: 25rpx; display: inline-flex;
  -moz-box-shadow:2px 1px 5px #A9B3BD; 
  -webkit-box-shadow:2px 1px 5px #A9B3BD; 
  box-shadow:2px 1px 5px #A9B3BD;
}
    /*补充样式  滑动样式*/
.tab_box{overflow: hidden;clear: both;width:93%;margin:25rpx auto;  background: #FFFFFF;
      border-radius: 15rpx;      padding: 0 35rpx 35rpx 35rpx;}
.messtop{height: 100rpx;line-height: 100rpx;}
.message_boximg{ width: 100%; display:flex; overflow-y:hidden;overflow-x:scroll;flex-wrap:nowrap;}
.message_boximg>.n3-nr{ width:22%; flex-shrink: 0;margin-right: 20rpx;}
.message_boximg>.n3-nr>image{ width: 100%;height:100%;} 
.message_boximg>.n3-nr>view>image{width: 100%;    height: 140rpx;}
.message_boximg>.n3-nr>view:last-child { display: flex;align-items: flex-end;color: #333;    font-size: 20rpx;}
.message_boximg>.tj_js{padding:25rpx 0;color: #999;font-size: 26rpx;overflow: hidden;clear: both;}
