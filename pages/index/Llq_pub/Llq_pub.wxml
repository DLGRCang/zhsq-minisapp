<!--pages/index/Llq_pub/Llq_pub.wxml-->
<cu-custom bgColor="bg-bluejb" isBack="{{true}}">
    <view slot="content">发布</view>
  </cu-custom>
  <view class="pub_content">
    <text class="pub_title">请输入发布内容：</text>
    <textarea name="" id="" cols="30" rows="10" placeholder="请输入要发布的内容..."></textarea>
  <!-- 相册 -->
  <view class="cu-bar bg-white margin-top">
		<text class="pub_title">发布图片：</text>
		<view class="action">
			{{imgList.length}}/9
		</view>
	</view>
	<view class="">
		<view class="grid col-4 grid-square flex-sub">
			<view class="bg-img" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage" data-url="{{imgList[index]}}">
				<image src='{{imgList[index]}}' mode='aspectFill'></image>
				<view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
					<text class="cuIcon-close"></text>
				</view>
			</view>
			<view class="solids" bindtap="ChooseImage" wx:if="{{imgList.length<9}}">
				<text class="cuIcon-cameraadd"></text>
			</view>
		</view>
  </view>
 <view class="fabu">
	<button class="cu-btn bg-zhsq">发布</button>
 </view>
  <view>
</view>
</view>

