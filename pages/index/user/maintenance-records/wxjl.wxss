/* 内容部分样式 */
.wxjl_content{
  width:93%;margin:35rpx auto;
}
.wxjl_content>.content_box{
  width:100%;margin:0 auto;
  padding:35rpx;background: #fff;border-radius:15rpx;
 overflow:hidden; 
  clear:both;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.content_box>.content_title{
  width:75%;height:auto;float: left; border-right:1px solid #DEE6F0;
}
.content_box>.content_title>text{line-height: 2;color: #333;font-size: 32rpx;font-weight: 400;}
.content_box>.content_title>view{padding-right:35rpx;color: #666;font-size: 28rpx;}
.content_box>.box_btn{
  width:25%;height:100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.content_box>.box_btn>button{
  width:125rpx;height:65rpx;line-height:65rpx;font-size: 28rpx;
  border-radius: 50rpx;float:right;position: relative;
}
