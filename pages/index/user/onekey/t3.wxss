@import '../../../../colorui/icon.wxss';
@import '../../../../colorui//main.wxss';
.onekey{
  width: 100%;
  height: 85%;
  background: #f9f9f9;
  position: fixed;
  bottom: 0;
  left: 0;
  border-radius: 30rpx 30rpx 0 0;

  box-sizing: border-box;
}
.keyimg{
  width: 100%;
  height: 140rpx;
  
}
.biaoshi{
  width: 100%;
  margin: 50rpx 0;
}
.bsnei{
  float: right;
  display: flex;
  align-items: center;
  
font-size: 24rpx;
font-family: Microsoft YaHei;
font-weight: 400;
color: #A9B3BD;
margin-left: 20rpx;
}
.bsnei view{
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  margin-right: 7rpx;
}
.men{
  width: 100%;
  padding:15rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
}
.mennei{
  width: 50%;
  padding: 15rpx;
  box-sizing: border-box;
}
.zhuangtai{
  width: 100%;
  height: 180rpx;
  border-radius: 20rpx;
  background: #fff;
  display: flex;
  flex-wrap: wrap;
  align-content: center;
}
.zhuangtai view:first-child{
  width: 100%;
font-size: 28rpx;
font-family: Microsoft YaHei;
font-weight: 400;
color: #333333;
text-align: center;
margin-bottom: 30rpx;
}
.zhuangtai view:last-child{
  width: 36rpx;
  height: 36rpx;
  border:5rpx solid #22B31E;
  border-radius: 50%;
  margin: 0 auto;
}
.erweima{
  width: 100vw;
  height: 100vw;
  padding: 30rpx;
  
}

.ewmnei{
  width: 100%;
  height: 100%;
  position: relative;
}
.tanchaung{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  z-index: 1;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.ewmnei image{
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}
.donghua{
  width: 100%;
  display: flex;justify-content: center;
}
.topT3{
  width: 100%;
  height: 8%;
  border-radius: 15rpx 15rpx 0 0;
  border-bottom: 1rpx solid #ccc;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.topT3 view{
  width: 33%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}
.topT3 view:nth-child(2){
  border-left: 1rpx solid #ccc;
  border-right: 1rpx solid #ccc;
  
}
.yxg{
  border-top: 1rpx solid #fff;
background: linear-gradient(60deg, #0586F8, #1BB1FD);
  color: #fff;
  
}
.botT3{
  width: 100%;
  height: 92%;
}
.lanya{
  padding:0 30rpx;
}
.kaimenbtn{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: linear-gradient(60deg, #0586F8, #1BB1FD);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-weight: 900;
  font-size: 30rpx;
}