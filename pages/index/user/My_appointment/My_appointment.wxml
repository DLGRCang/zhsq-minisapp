    </view>
  </view> 

  

  <!-- 第二栏目 -->
  <view class="right-item {{tabArr.curBdIndex=='1'? 'active' : ''}}">
      <view class="tab_box" bindtap="xiangqing">
      <view class="box_left">
        <view class="cu-tag bg-lvse light xtb">进行中</view>
        <image src="http://www.tattoojd.com/wp-content/uploads/2019/12/a92.jpg"></image>
