      <view class="ewm-1">李三的临时密码 <text class="ewm-1 fr text-gray">使用中</text></view>
      <view class="mima">
        <view class="mima-nei">
            <view class='pass_content'> 
              <block wx:for="{{Length}}" wx:key="item"> 
              <input class='iptbox' value="{{Value.length>=index+1?Value[index]:''}}" disabled password='{{ispassword}}' catchtap='Tap'></input> 
              </block> 
            </view> 
            <input name="password" class='ipt' maxlength="{{Length}}" focus="{{isFocus}}" bindinput="Focus"></input> 
        </view>
      </view>
       <view class="text-blue text-center">复制临时密码</view>
    </view>
    <!-- 复制 第二个 -->
    <view class="tab_box" bindtap="xiangqing">
      <view class="ewm-1 text-gray">李三的临时密码 <text class="ewm-1 fr text-gray">已过期</text></view>
