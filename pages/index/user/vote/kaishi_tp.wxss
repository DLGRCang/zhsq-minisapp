}
.beijing{
  width: 100%;
  height: 530rpx;
  left: 0;
  top: 0;
  position: absolute;
  z-index: -1;
}



switch, checkbox, radio {
  margin-right: 15rpx;
}
.tui-menu-list,.weui-cell__hd{line-height: 2.5;}
.body-ase{
  width: 100%;
  height: 130rpx;
  position: relative;
  background: #fff;
  overflow: hidden;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}
.ase-box{
  width: 100%;
  height: 130rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
 position: absolute;
}
.abc{
  width: 200%;

  height: 130rpx;
  position: absolute;
  border-radius: 100%;
background: linear-gradient(48deg, #F1F6FD, #E4EDFD);
  right: -130%;
  top: 65rpx;
  overflow: hidden;
}
.ase-left{
  height: 100%;
  width: 80%;
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
}
.ase-left view:first-child{
  width: 100%;
font-size: 24rpx;
font-family: Microsoft YaHei;
font-weight: bold;
color: #333333;
}
.ase-left view:last-child{
  width: 100%;
  
font-size: 20rpx;
font-family: Microsoft YaHei;
font-weight: 400;
color: #333333;
}
.ase-right{
  width: 20%;
}
.ase-right .btn{
  width: 100%;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  
background: linear-gradient(60deg, #BCCBFF, #A7B7FF);
border-radius: 25rpx;

font-size: 24rpx;
font-family: Microsoft YaHei;
font-weight: 400;
color: #FFFFFF;
}