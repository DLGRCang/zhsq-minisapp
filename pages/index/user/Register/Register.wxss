/* pages/index/Register/Register.wxss */
.fr{float: right;}
.fl{float: left;}
.login_box{margin:0 auto;background: #fff;
  clear: both;overflow: hidden;padding-bottom: 15%;
}
.login_box>.login_top{width: 100%;height: 400rpx;}
.login_box>.login_top>image{width:75%;height: 400rpx;}
/* .login_box>.login_top>view{position: relative;} */
.login_box>.login_top>.hello{padding-left:10%;    position: absolute; z-index: 999;font-weight: bold;top: 27%;}
.login_box>.login_top>.hello>view:nth-child(1){font-size: 50rpx;line-height: 2;}
.login_box>.login_top>.hello>view:nth-child(2){font-size: 42rpx;}

.login_box>.login_input{width: 80%;margin:35rpx auto;}
.login_box>.login_input>view{margin:35rpx auto;}
.login_box>.login_input>view>input{
  width: 100%;
height: 100rpx;height: 100rpx;
background: #FFFFFF;
border: 2rpx solid #E8EEF4;
border-radius: 45rpx;padding-left: 50rpx;
}
.login_box>.login_input>view>.tubiao{
  margin-top: 38rpx;margin-left: 15rpx;position: absolute;
}
.login_box>.login_input>view>.yzm{float: right;    margin-top: -70rpx;margin-right: 20rpx;}
.btn{width: 100%;
 height:90rpx;line-height:90rpx;color: #fff;
  background: linear-gradient(60deg, #66B7F9, #3A91F7);
  border-radius: 44px;}
 .center{text-align: center;line-height: 2;color: #188BFF;} 