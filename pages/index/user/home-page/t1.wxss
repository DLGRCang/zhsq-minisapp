.header-marquee-item1 {
  margin: 0 10px;
  position: absolute;
  left: 0;
  animation: marquee1 8s linear 1000000000;
}

.header-marquee-item2 {
  margin: 0 10px;
  position: absolute;
  left: 0;
  animation: marquee2 8s linear 1000000000;
}

@keyframes marquee1 {
  0% {
    left: 0;
  }
  100% {
    left: -100%;
  }
}

@keyframes marquee2 {
  0% {
    left: 100%;
  }
  100% {
    left: 0%;
  }
}
.tongzhi-text {
