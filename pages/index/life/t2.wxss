/* pages/index/t2/t2.wxss */
@import "../../../colorui/main.wxss";
@import "../../../colorui/icon.wxss";
.life{
  width: 100%;
  height: 100%;
  overflow-y: hidden;
}
.life-top{
  width: 100%;

  padding: 53rpx 30rpx 20rpx;
  box-sizing: border-box;
}

.sousuo{
  width: 100%;
  height: 70rpx;
  background: #fff;
  border-radius: 35rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 10rpx 0 20rpx;
  box-sizing: border-box;
}
.sousuo input:nth-child(2){
  width: 70%;
  height: 100%;
}
.sousuo view:last-child{
  width: 120rpx;
height: 55rpx;
background: linear-gradient(60deg, #66B7F9, #3A91F7);
border-radius: 28rpx;
display: flex;
align-items: center;
justify-content: center;

font-size: 24rpx;
font-family: Microsoft YaHei;
font-weight: 400;
color: #FFFFFF;
}
.life-bot{
  width: 100%;
  height: 83%;
  background: #f9f9f9;
  border-radius: 20rpx 20rpx 0 0;
  padding: 30rpx;
}
.bot-over{
  width: 100%;
  height: 100%;
  overflow-y: auto;
  padding-bottom: 210rpx;
}
.bot-neirong{
  width: 100%;
  margin-bottom: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}
.nr-left{
  width: 20%;
}
.nr-left view{
  width: 100%;
  height: 100rpx;
  background: #eee;
}
.nr-right{
  width: 80%;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.r-n1{width: 100%;
  
font-size: 26rpx;
font-family: Microsoft YaHei;
font-weight: 400;
color: #333333;
}
.r-n2{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  
font-size: 20rpx;
font-family: Microsoft YaHei;
font-weight: 400;
color: #A9B3BD;
margin: 19rpx 0;
}
.r-n3{
  width: 100%;
  display:flex;
   overflow-y:hidden;
   overflow-x:scroll;
   width:100%;
   flex-wrap:nowrap;
}
.n3-nr{
  flex-shrink: 0;
  margin-right: 20rpx;
  width: 190rpx;
}
.n3-nr view:first-child{
  width: 100%;
  height: 140rpx;
background: #FCFAFB;
}
.n3-nr view:nth-child(2){
  width: 100%;
  overflow: hidden;white-space: nowrap;text-overflow: ellipsis;
  
font-size: 24rpx;
font-family: Microsoft YaHei;
font-weight: 400;
color: #333333;
margin: 5rpx 0 8rpx;
}
.n3-nr view:last-child{
  display: flex;
  align-items: flex-end;
  color: #F55E5A;
}