/* 頭部背景樣式 */
.box-body{ width: 100%;height: 100%;position: relative;overflow-x: hidden;
  /* padding: 0 30rpx; */color:#000;
}
.back-box1{width: 200%;height: 310rpx;background: #0688F8;opacity: 0.3;
border-radius: 50%;position: absolute;top: -7%;left: -50%;z-index: -3;}
.back-box2{position: absolute;top: -9%;left: -55%;z-index: -2;width: 200%;
height: 300rpx;background: #1BB1FD;border-radius: 50%;}
.back-box3{position: absolute;top: -12%;left: -50%;z-index: -1;
  width: 200%;height: 300rpx; background: #1082FF; border-radius: 50%;
}

/* 内容样式 */
.settled_content{width: 93%;border-radius: 15rpx;margin:35rpx auto;padding:35rpx;background: #fff;clear: both;overflow: hidden;}
.settled_content>.fl{float: left;width:15%;}
.settled_content>.fl>image{width: 150rpx;height: 110rpx;border-radius: 15rpx;}
.settled_content>.fr{float: right;width: 80%;}
.settled_content>.fr>text:nth-child(1){line-height: 1.8;font-size: 26rpx;}
.settled_content>.fr>view{line-height: 1.8;color: #999999;font-size: 24rpx;}