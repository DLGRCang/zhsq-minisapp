/* pages/index/WY_pj/WY_pj.wxss */
@import "../../../../colorui/main.wxss";
@import "../../../../colorui/icon.wxss";
/* 頭部背景樣式 */
.box-body{ width: 100%;height: 100%;position: relative;overflow-x: hidden;
  /* padding: 0 30rpx; */color:#333;padding-bottom: 25%;
}
.back-box1{width: 200%;height: 488rpx;background: #0688F8;opacity: 0.3;
border-radius: 50%;position: absolute;top: -7%;left: -50%;z-index: -3;}
.back-box2{position: absolute;top: -9%;left: -55%;z-index: -2;width: 200%;
height: 479rpx;background: #1BB1FD;border-radius: 50%;}
.back-box3{position: absolute;top: -12%;left: -50%;z-index: -1;
  width: 200%;height: 479rpx; background: #1082FF; border-radius: 50%;
}


/* 内容样式 */
.pj_box{margin:35rpx auto;padding:35rpx;background: #fff;border-radius: 15rpx;width: 93%;font-size: 26rpx;
padding-bottom: 25%;}
.pj_box>.user{width: 80%;margin:0 auto;text-align: center;padding: 45rpx;font-size: 32rpx;}
.pj_box>.user>image{width:100rpx;height:100rpx;border-radius: 50%;}
.pj_box>.pj_title>text{display: block;line-height: 2.5;  text-align: center;  font-weight: 400;}
.pj_box>.pj_title>text:nth-child(1){font-size: 40rpx;color: #188BFF;}
.pj_box>.pj_title>text:nth-child(2){color: #8A8A8F;}
.pj_box>.pj_title>text:nth-child(3){color: #8A8A8F;}
.star{margin:0 auto;text-align: center;padding:45rpx 0;}    
.star>image{width:50rpx;height: 50rpx;display: inline-block;margin:5rpx;}

.btn{width: 80%;margin:0 auto;
  height: 90rpx;line-height: 90rpx;color: #fff;
  background: linear-gradient(60deg, #66B7F9, #3A91F7);
  border-radius: 50rpx;}