.top-navigation{
  width: 100%;position: fixed;
  -moz-box-shadow:2px 2px 5px #DEE6F0; 
  -webkit-box-shadow:2px 2px 5px #DEE6F0; 
  box-shadow:2px 2px 5px #DEE6F0;
  display: flex;
  /* border-top:none; */
  align-items: flex-end;
  padding: 25rpx;
  box-sizing: border-box;z-index: 9999;
}
.top-navigation view{
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color:#333;
}
.top-navigation text:first-child{
  font-size: 30rpx;
  color:#333;
  margin-right: 8rpx;
}
