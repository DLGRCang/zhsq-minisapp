/* 内容部分样式 */
.wxjl_content{
  width:96%;margin:35rpx auto;
}
.wxjl_content>.content_box{
  width:100%;margin:0 auto;height:auto;
  padding:35rpx;background: #fff;border-radius:15rpx;
 overflow:hidden; 
  clear:both;
}
.content_title{
 float: left; border-right:1px solid #DEE6F0;padding-right:35rpx;
}
.wxjl_image{
width:120rpx;height:120rpx;background: none;
}
.wxjl_image>image{width:100%;height:100%;}

.box_btn>button{
  width:125rpx;height:65rpx;line-height:65rpx;font-size: 28rpx;
  border-radius: 50rpx;float:right;position: relative;
}
