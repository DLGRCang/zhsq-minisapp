/* pages/visitor/visitor.wxss */

.visitor{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.top-navigation{
  width: 100%;
  height: 10.5%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #333333;
}
.visitor-box{
  width: 100%;
  height: 89.5%;
  padding:30rpx;
  box-sizing: border-box;
}
.box-top{
  width: 100%;
  margin: 0 0 60rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.box-top text:first-child{
font-size: 24rpx;
font-family: Microsoft YaHei;
font-weight: 400;
color: #333333;
}
.box-top view:last-child{
  width: 120rpx;
height: 50rpx;
background: linear-gradient(60deg, #66B7F9, #3A91F7);
border-radius: 25rpx;
font-size: 20rpx;
font-family: Microsoft YaHei;
font-weight: 400;
color: #FFFFFF;
display: flex;
align-items: center;
justify-content: center;
}
.box-km{
  width: 100%;
}
.km-1{
  width: 100%;
  margin-bottom: 30rpx;
font-size: 24rpx;
font-family: Microsoft YaHei;
font-weight: 400;
color: #333333;
}
.km-2{
  width: 100%;

background: #E5F4FB;
border-radius: 12rpx;
padding: 20rpx 30rpx;
box-sizing: border-box;
display: flex;
margin-bottom: 30rpx;
}
.km-2 view:first-child{
  width: 7%;
  padding: 0;
}
.km-2 view:last-child{
  width: 93%;
font-size: 20rpx;
font-family: Microsoft YaHei;
font-weight: 400;
color: #188BFF;
}
.box-ewm{
  width: 100%;
  background: #fff;
  padding: 50rpx 30rpx;
  box-sizing: border-box;
  border-radius: 12rpx;
}
.ewm-1{
font-size: 24rpx;
font-family: Microsoft YaHei;
font-weight: 400;
color: #333333;
}