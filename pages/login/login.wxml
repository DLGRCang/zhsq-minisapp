<!--pages/authorization/authorization.wxml-->
<view class="authorization">
  <view class="aut1">
    <image src="../../images/time.jpg"></image>
  </view>
  <view class="aut2">
    成迈申请获得以下权限：
  </view>
  <view class="aut2_2">
    获得您的公开信息（昵称，头像等）
  </view>
  <view class="aut3">
    <button open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="bindGetUserInfo">确认授权</button>
  </view>
  <view class="aut4">
    <view bindtap="notTemporarily">暂不授权</view>
  </view>
</view>
